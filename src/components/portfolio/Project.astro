---
import type { link } from "./ProjectLink.astro";
import ProjectLink from "./ProjectLink.astro";

interface Props {
    title: string;
    link1: link;
    link2?: link;
}

const { title, link1, link2 } = Astro.props;
---

<div
    class="flex flex-wrap gap-5 justify-evenly content-start lg:max-w-xl md:max-w-lg text-center"
>
    <h3
        class="text-green font-condensed italic text-7xl leading-title-tight tracking-tight uppercase"
    >
        {title}
    </h3>
    <p class="font-mono text-2xl leading-p w-fit">
        <slot />
    </p>
    <ProjectLink link={link1} />
    {link2 ? <ProjectLink link={link2} /> : ""}
</div>
