---
interface Props {
    title: string;
    author: string;
    link: string;
}

const { title, author, link } = Astro.props;
---

<li class="w-1/3">
        <a href={link}>
                <h2 class="text-2xl bold font-bold italic">{title}</h2>
                <p>por: {author}</p>
        </a>
</li>
